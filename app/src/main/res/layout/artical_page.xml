<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela_forget_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#554F5E">

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/icon_back"
            android:onClick="artical_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查看帖子"
            android:textColor="#fff"
            android:textSize="20sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/artical_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="文章标题"
                android:textColor="#000"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="楼主"
                    android:textColor="#00BFFF"
                    android:textSize="16sp" />

                <cn.fluencycat.protecteyes.View.CircleImageView
                    android:id="@+id/user_headIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    app:border_color="#c9c9c9" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/artical_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1970-1-1 24:00:00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/artical_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="5dp"
                android:text="文章内容"
                android:textColor="#000"
                android:textSize="18sp" />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <cn.fluencycat.protecteyes.View.AutoScaleWidthImageView
                android:visibility="gone"
                android:id="@+id/artical_img_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="没有内容啦"
                android:textSize="17sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>